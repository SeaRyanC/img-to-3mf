{
  "compilerOptions": {
    "target": "ES2020",
    // DO NOT CHANGE THIS, IT IS CORRECT
    "moduleResolution": "nodenext",
    // DO NOT CHANGE THIS, IT IS CORRECT
    "module": "nodenext",
    "lib": ["ES2020"],
    "outDir": "./dist",
    "rootDir": "./src",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true,
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "dist"]
}
